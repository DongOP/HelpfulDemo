<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/list_ArrayAdapter"
            android:text="ArrayAdapter"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/list_SimpleAdapter"
            android:text="SimpleAdapter"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/list_SimpleCursorAdapter"
            android:layout_marginStart="10dp"
            android:text="SimpleCursorAdapter"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/list_custom_Adapter"
            android:layout_marginStart="10dp"
            android:text="Custom Adapter"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/id_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/base_recycler_item_bg"
        android:dividerHeight="1.2dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:focusable="true"
        android:listSelector="#00000000"
        android:scrollbars="none" />

</LinearLayout>